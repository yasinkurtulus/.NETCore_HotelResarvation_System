@model List<HotelResarvationWebUI.Models.Staff.StaffViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th> Personel Adı</th>
        <th> Personel Unvan</th>
        <th> Sil</th>
        <th> Guncelle</th>
        <th> Detaylar</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.StaffId</td>
            <td>@item.Name</td>
            <td>@item.Position</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>
            <td><a href="/Staff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-succes">Update</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Add New Staff</a>

