@model List<HotelResarvationWebUI.Models.Testimonial.TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th> Referance Picture</th>
        <th> Referance Name</th>
        <th> Personel Position</th>
        <th> Delete</th>
        <th> Guncelle</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.Name</td>
            
            <td><a href="/Staff/DeleteStaff/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>
            <td><a href="/Staff/UpdateStaff/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-succes">Update</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Add New Staff</a>


